<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-background-color: #0D0F12;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.comicapp.HomeController">
    <VBox spacing="20"
        maxWidth="900"
        alignment="TOP_CENTER">
    <!-- ░░ BANNER SUPERIOR ░░ -->
    <HBox spacing="20" style="-fx-background-color: #111418;                  -fx-border-color: #00AEEF;                  -fx-border-width: 0 0 3 0;">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Texto del banner -->
        <VBox alignment="CENTER_LEFT" spacing="5">
            <Label style="-fx-font-size: 26;                           -fx-text-fill: #00AEEF;                           -fx-font-weight: bold;" text="Comic App" />
            <Label style="-fx-font-size: 14;                           -fx-text-fill: #c9d6e3;" text="Colección de comics" />
        </VBox>

        <Pane HBox.hgrow="ALWAYS" />
    </HBox>


    <!-- ░░ ESTADÍSTICAS ░░ -->
    <HBox alignment="CENTER" spacing="15">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #111418;                      -fx-padding: 15;                      -fx-border-radius: 10;                      -fx-background-radius: 10;                      -fx-border-color: #00AEEF44;                      -fx-border-width: 1;">
            <Label style="-fx-text-fill: #A0B8C6;                           -fx-font-size: 13;" text="Total de Comics" />
            <Label fx:id="lblTotalComics" style="-fx-text-fill: #00AEEF;                           -fx-font-size: 20;                           -fx-font-weight: bold;" text="000" />
        </VBox>

        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #111418;                      -fx-padding: 15;                      -fx-border-radius: 10;                      -fx-background-radius: 10;                      -fx-border-color: #00AEEF44;                      -fx-border-width: 1;">
            <Label style="-fx-text-fill: #A0B8C6;                           -fx-font-size: 13;" text="Editoriales" />
            <Label fx:id="lblEditoriales" style="-fx-text-fill: #00AEEF;                           -fx-font-size: 20;                           -fx-font-weight: bold;" text="000" />
        </VBox>

        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #111418;                      -fx-padding: 15;                      -fx-border-radius: 10;                      -fx-background-radius: 10;                      -fx-border-color: #00AEEF44;                      -fx-border-width: 1;">
            <Label style="-fx-text-fill: #A0B8C6;                           -fx-font-size: 13;" text="Comics Nuevos" />
            <Label fx:id="lblNuevos" style="-fx-text-fill: #00AEEF;                           -fx-font-size: 20;                           -fx-font-weight: bold;" text="000" />
        </VBox>
    </HBox>


    <!-- ░░ ÚLTIMOS AGREGADOS ░░ -->
    <VBox spacing="10">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <Label style="-fx-text-fill: #00AEEF;                       -fx-font-size: 20;                       -fx-font-weight: bold;" text="Últimos Agregados" />

        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background: transparent;                            -fx-padding: 0;">
            <FlowPane fx:id="contenedorUltimos" hgap="15" alignment="CENTER" prefWrapLength="600"  style="-fx-padding: 5;                              -fx-background-color: #0D0F12;" vgap="15">
            </FlowPane>
        </ScrollPane>
    </VBox>
    </VBox>
</VBox>
